    "method": "POST",
    "uri": "http://localhost/api/query",
    "payload": {
      "query": "SELECT count (*) AS failhost FROM (SELECT DISTINCT s_up.hostkey FROM softwareupdates s_up WHERE patchreporttype = 'AVAILABLE') AS c_query"
